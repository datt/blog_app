<script id="underscoreCommentTemplate" type="text/html">
  <ul class="allComments">
    <%% _.each(comments, function(comment, index){ %>
      <li>
        <strong>Commenter:</strong>
        <%%= comment.commenter %>
        <div class="comment">
          <strong>Comment:</strong>
          <%%= comment.body %>
          <a data-confirm="Are you sure?", data-method= "delete", href="/posts/<%%= comment.post_id %>/comments/<%%= comment.id %>" rel="nofollow"> Remove</a>
        </div>
      </li>
    <%% }); %>
  </ul>
</script>